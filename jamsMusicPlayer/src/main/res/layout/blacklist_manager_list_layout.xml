<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/blacklist_manager_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/blacklist_manager_element_name"
        android:layout_alignRight="@+id/blacklist_manager_element_name"
        android:layout_below="@+id/blacklist_manager_element_name"
        android:layout_marginTop="15dp"
        android:text="Artist"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/blacklist_manager_element_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:ellipsize="end"
        android:gravity="left"
        android:lines="1"
        android:text="Element Name"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>